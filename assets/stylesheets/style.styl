blue = #5B83AD
yellow = #FFFFE0

body
  padding 50px
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif

  #battlefield
    width 600px

    .block
      width 180px
      height 180px
      float left
      padding 10px
      margin 10px
      box-sizing border-box
      background #F7F7F7
      position relative

      &:hover
        background #EEE
        cursor pointer

      &.blk_0:after
        absolute top 0 left 0
        right 0
        bottom 0
        text-align center
        font-size 180px
        line-height 180px
        content 'O'
        color red

      &.blk_1:after
        absolute top 0 left 0
        right 0
        bottom 0
        text-align center
        font-size 180px
        line-height 180px
        content 'X'
        color blue

  #players
    float right

    .player0:before
      content 'o '
      color red
    .player1:before
      content 'x '
      color blue

    .winner
      background silver
    .winner:after
      content ' 胜利！'

